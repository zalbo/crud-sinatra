<div class="content container">
  <div class="posts">
    <div class="post">
      <h1 class="post-title"><%= @article.title %></h1>
      <p><%=RDiscount.new(@article.content).to_html %></p>

      <% unless @article[:file3d] == nil %>
      <div id="viewer" style="width:300px;height:300px"></div>
      <% end %>

      <% unless @article[:image] == "" %>
      <img src="<%= @article.image.url%>" />
      <% end %>

      <% if @article.save %>
      <h1> Commenti </h1>
      <hr>
      <% @article.comments.each do |comment| %>
      <h3><%= comment.email %></h3>
      <h5><%= comment.content %></h5>
      <% if current_user %>
      <a href="/delete_comment/<%= comment.id%>/<%= comment.article_id%>">Cancella commento</a>
      <% end %>
      <% end %>
      <%end%>

      <h4> Manda questa email a qualche tuo amico </h4>
      <h9><%=@state%></h9>
      <form action="/email/<%=@article.id%>" method="POST">

        <input type="text" name="sender_email">
        <h7> Inserisci qui la tua l'email </h7> <br>
        <input type="text" name="password">
        <h7> Inserisci qui la password della tua casella email </h7> <br>
        <input type="text" name="receiver_email" >
        <h7> Inserisci qui l'email del destinatario </h7> <br>
        <input type="submit" value="Manda Email ">
      </form>





      <h1> Scrivi commento </h1>

      <% @comment.errors.full_messages.each do |error| %>
      <ul type="disc">
        <li><%= error %></li>
      </ul>
      <% end %>
      <form action="/comment" method="POST">
        <input type="hidden" name="article_id" value="<%= @comment.article_id %>">
        <h3> Email </h3>
        <input type="text" name="email" value="<%= @comment.email %>">
        <h3> Messaggio </h3>
        <textarea rows="4" cols="50" input type="text" name="content" ><%= @comment.content %></textarea>
        <input type="submit" value="Inserisci commento ">
      </form>
    </div>
  </div>
</div>
