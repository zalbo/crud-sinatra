<h1> Cerca nelle email e nel messaggio </h1>

<form action="/" method="GET">
  <input type="text" name="search" value=<%=  params[:search] %>>
  <input type="submit" value="Cerca... "><a href="/?search="> Reset </a>
</form>

<% unless @messages.empty? %>

<h1> Lista dei Messaggi </h1>

<table>
  <thead>
    <tr>
      <th>N.</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each_with_index do |message , index | %>
    <tr>
      <td><%= index + 1 %></td>
        <td><%= message.email %></td>
        <td><%= message.content%></td>
      <td><a href="/show/<%= message.id %>">Mostra</a></td>
      <% if session[:logged] %>
        <td><a href="/edit/<%= message.id %>">Modifica</a></td>
        <td><a href="/delete/<%= message.id %>">Cancella</a></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<% if session[:logged] %>
  <a href="/new">Nuovo Messaggio</a>
<% end %>
