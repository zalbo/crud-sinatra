<h1> Cerca nelle email e nel messaggio </h1>

<form action="/" method="GET">
  <input type="text" name="search" value=<%=  params[:search] %>>
  <input type="submit" value="Cerca... "><a href="/?search="> Reset </a>
</form>

<% unless @articles.empty? %>

<h1> Lista dei Messaggi </h1>

<table>
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each_with_index do |article , index | %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= article.title%></td>
      <td><a href="/show/<%= article.id %>">Mostra</a></td>
      <% if current_user %>
      <td><a href="/edit/<%= article.id %>">Modifica</a></td>
      <td><a href="/delete/<%= article.id %>">Cancella</a></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<% if current_user %>
<a href="/new">Nuovo Messaggio</a>
<% end %>
